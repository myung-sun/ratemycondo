<%= div_for(comment) do %>
  <div class="comments_wrapper clearfix">
    <div class="pull-left">
      <p class="lead"><%= comment.body %></p>
      <p><small>Submitted <%= time_ago_in_words(comment.created_at) %> ago by <%= comment.user.email %></small></p>
    </div>

    <div class="btn-group pull-right" id="comment_destroy_btn">
      <% if user_signed_in? && (comment.user == current_user || current_user.is_admin?) %>
        <%= link_to 'Destroy', [@link, comment], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-default" %>
      <% end %>
    </div>
  </div>
<% end %>
