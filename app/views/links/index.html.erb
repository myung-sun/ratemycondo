<p id="notice"><%= notice %></p>

<h1>Listing Links</h1>

<!= Search Feature =>
<%= form_tag(links_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
<%= submit_tag "Search" %>
<% end %>

<!= Displays followings if there does not exist match  >
<% if @links.present? %>

<% else %>
  <p>There are no posts containing the term(s) <%= params[:search] %>.</p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Availablity</th>
        <th>like</th>
      <th>dislike</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @links.each do |link| %>
    <tr>
    <div class="link row clearfix">
      <h2>
        <td><%= link_to link.name, link %><br></td>
        <td><%= link_to link.address, link %><br></td>
        <td><%= link_to link.bedroom, link %><br></td>
        <td><%= link.get_upvotes.size %></td>
        <td><%= link.get_downvotes.size %></td>
      </h2>
    </div>
    </tr>
  </tbody>

  
<% end %>
</table>

